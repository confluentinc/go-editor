  {{~/if}}
  <style>
    body {
      padding: 0;
      margin: 0;
    }

    .banner {
      display: flex;
      flex-direction: column;
      text-align: center;
      background: #0074A2;
      color: white;
      font-family: 'Montserrat';
    }

    .banner h1 {
      font-size: 2.8em;
      font-weight: 300;
    }

    .banner p {
      font-size: 1.1em;
      font-weight: 100;
      vertical-align: middle;
    }

    .btn-bgstroke {
      font-size: 20px;
      border: 1px solid white;
      padding: 0 20px;
      border-radius: 10px;
      text-decoration: none;
      height: 50px;
      width: 300px;
      margin: auto;
      margin-top: 30px;
      margin-bottom: 30px;
      line-height: 47px;
      cursor: pointer;
      font-weight: 300;
      color: white;
    }

    .btn-bgstroke:hover {
      border: 1px solid white;
      background-color: white;
      color: #0074A2;
    }
  </style>
  {{{redocHead}}}
  {{#if templateOptions.style~}}<style>{{{templateOptions.style}}}</style>{{~/if~}}
  {{#unless disableGoogleFont}}<link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,700|Roboto:300,400,700" rel="stylesheet">{{/unless}}
</head>

<body>
  {{#if templateOptions.banner~}}{{{templateOptions.banner}}}{{~/if~}}
  {{{redocHTML}}}
</body>

</html>
